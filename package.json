{
  "name": "pepper-report",
  "version": "0.1.0",
  "description": "Analyzing and visualizing Pepper's daycare report cards",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "build:pages": "bun install && astro build",
    "preview": "astro preview",
    "scrape:schedule": "bun tsx --env-file=.env scripts/scrapers/scrape-schedule.ts",
    "scrape:report": "bun tsx --env-file=.env scripts/scrapers/scrape-report.ts",
    "backfill:schedule": "bun tsx --env-file=.env scripts/backfill-schedule.ts",
    "backfill:reports": "bun tsx --env-file=.env scripts/backfill.ts",
    "analyze": "bun run scripts/analysis/analyze-all.ts",
    "analyze:photos": "bun tsx --env-file=.env scripts/analysis/analyze-photos.ts",
    "anonymize": "bun run scripts/anonymize.ts",
    "test": "bun test",
    "test:staff": "bun run scripts/test-staff-discovery.ts",
    "test:r2": "bun run scripts/test-r2-upload.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@astrojs/react": "^4.4.2",
    "@aws-sdk/client-s3": "^3.943.0",
    "astro": "^5.16.4",
    "dayjs": "^1.11.19",
    "playwright": "^1.57.0",
    "recharts": "^3.5.1",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "1.3.3",
    "lefthook": "^2.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
