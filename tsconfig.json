{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["bun-types"],
    "paths": {
      "@/*": ["./src/*"],
      "@scripts/*": ["./scripts/*"],
      "@data/*": ["./data/*"]
    }
  },
  "include": ["src/**/*", "scripts/**/*", "*.ts"],
  "exclude": ["node_modules", "dist", ".astro"]
}
