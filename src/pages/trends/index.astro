---

import { formatDateNoYear } from '../../../scripts/utils/date-utils';
import BehaviorLists from '../../components/trends/BehaviorLists.astro';
import BehaviorSummaryCards from '../../components/trends/BehaviorSummaryCards.astro';
import TrendsLayout from '../../layouts/TrendsLayout.astro';
import { gradeToPercent, loadBehaviorData, loadGradeData } from '../../utils/trends-data';

const { trends } = loadGradeData();
const behaviorData = loadBehaviorData();
---

<TrendsLayout title="Trends Overview - Pepper's Daycare" activeTab="overview">
  <!-- Overall Statistics -->
  <div class="summary-card">
    <h2>Overall Performance</h2>
    <div class="summary-stats">
      <div class="summary-stat">
        <span class="stat-label">Average Grade</span>
        <span class="stat-value">{trends.summary.overallAverageGrade.toFixed(2)}/4.0</span>
        <span class="stat-percent">{gradeToPercent(trends.summary.overallAverageGrade)}%</span>
      </div>
      <div class="summary-stat">
        <span class="stat-label">Total Days</span>
        <span class="stat-value">{trends.summary.totalReports}</span>
      </div>
      <div class="summary-stat">
        <span class="stat-label">Date Range</span>
        <span class="stat-value"
          >{formatDateNoYear(trends.summary.dateRange.start)} - {formatDateNoYear(
            trends.summary.dateRange.end,
          )}</span
        >
      </div>
    </div>
  </div>

  <!-- Behavior Summary and Lists -->
  {
    behaviorData && (
      <>
        <BehaviorSummaryCards behaviorData={behaviorData} />
        <BehaviorLists
          positiveBehaviors={behaviorData.positiveBehaviors}
          negativeBehaviors={behaviorData.negativeBehaviors}
        />
      </>
    )
  }
</TrendsLayout>

<style>
  .summary-card {
    background: white;
    border: 2px solid var(--cream-dark);
    padding: 3rem;
    margin-top: 3rem;
    margin-bottom: 3rem;
    position: relative;
  }

  .summary-card::before {
    content: '';
    position: absolute;
    top: -28px;
    left: 2rem;
    right: 2rem;
    height: 4px;
    background: var(--gradient-accent);
  }

  .summary-card h2 {
    margin: 0 0 2rem 0;
    font-size: 2.5rem;
    color: var(--rust);
    font-weight: 700;
  }

  .summary-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 3rem;
  }

  .summary-stat {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background: rgba(154, 96, 64, 0.03);
    border-left: 4px solid var(--gold);
  }

  .stat-label {
    font-size: 0.95rem;
    color: var(--warm-gray);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    font-family: 'Cormorant Garamond', serif;
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .stat-percent {
    font-size: 1.1rem;
    color: var(--teal);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .summary-card {
      padding: 2rem 1.5rem;
    }

    .summary-card::before {
      left: 1rem;
      right: 1rem;
    }

    .summary-card h2 {
      font-size: 2rem;
    }

    .summary-stats {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .summary-stat {
      padding: 1.25rem;
    }

    .stat-value {
      font-size: 2rem;
    }
  }
</style>
