    }

    .grade-description {
      font-size: 1.1rem;
    }

    .report-columns {
      column-count: 1;
      margin-bottom: 0;
    }

    .report-section {
      margin-bottom: 1.5rem;
    }

    .report-section h3 {
      font-size: 1.2rem;
    }

    .quick-links {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .link-card {
      padding: 1.5rem;
    }

    .link-card::after {
      right: 1.5rem;
    }

    .link-icon {
      font-size: 2rem;
    }

    .link-text {
      font-size: 1.1rem;
    }

    .noteworthy {
      padding: 1.25rem;
      font-size: 1rem;
    }
  }
</style>
