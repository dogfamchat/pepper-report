import { readdirSync, readFileSync } from 'node:fs';
import { join } from 'node:path';
import Layout from '../layouts/Layout.astro';

// Read the latest report card
const reportsDir = join(process.cwd(), 'data', 'reports', '2025');
const reportFiles = readdirSync(reportsDir)
  .filter(f => f.endsWith('.json'))
  .sort()
  .reverse();

const latestReportFile = reportFiles[0];
const latestReportPath = join(reportsDir, latestReportFile);
const latestReport = JSON.parse(readFileSync(latestReportPath, 'utf-8'));

// Read grade trends summary
const gradeTrendsPath = join(process.cwd(), 'data', 'analysis', 'aggregates', 'grade-trends.json');
const gradeTrends = JSON.parse(readFileSync(gradeTrendsPath, 'utf-8'));

// Calculate grade percentage
const gradePercent = (gradeTrends.summary.overallAverageGrade / 4.0) * 100;

// Format date nicely
const formatDate = (dateStr: string) => {
  const [year, month, day] = dateStr.split('-').map(Number);
  const date = new Date(year, month - 1, day);
  return date.toLocaleDateString('en-CA', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
