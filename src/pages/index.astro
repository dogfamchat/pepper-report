<Layout title="Pepper's Daycare Dashboard">
  <main>
    <div class="header">
      <h1>üêï Pepper's Daycare Dashboard</h1>
      <p class="subtitle">Tracking {latestReport.dog.name}'s daycare adventures since August 2025</p>
    </div>

    <!-- Overall Stats -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-value">{gradeTrends.summary.totalReports}</div>
        <div class="stat-label">Total Days</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">{gradeTrends.summary.overallAverageGrade.toFixed(2)}</div>
        <div class="stat-label">Average Grade</div>
        <div class="stat-detail">{gradePercent.toFixed(0)}% (A-B average)</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">{gradeTrends.summary.overallGradeDistribution.A}</div>
        <div class="stat-label">A Grades</div>
        <div class="stat-detail">{((gradeTrends.summary.overallGradeDistribution.A / gradeTrends.summary.totalReports) * 100).toFixed(0)}% of days</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">{gradeTrends.weekly.length}</div>
        <div class="stat-label">Weeks Tracked</div>
      </div>
    </div>

    <!-- Latest Report Card -->
    <div class="latest-report">
      <div class="report-header">
        <h2>Latest Report Card</h2>
        <span class="report-date">{formatDate(latestReport.date)}</span>
      </div>

      <div class="grade-banner grade-{latestReport.grade.toLowerCase()}">
        <div class="grade-letter">{latestReport.grade}</div>
        <div class="grade-description">{latestReport.gradeDescription}</div>
      </div>

      <div class="report-section">
        <h3>Staff</h3>
        <p>{latestReport.staffNames.join(', ')}</p>
      </div>

      <div class="report-section">
        <h3>Best Part of Day</h3>
        <p class="highlight">{latestReport.bestPartOfDay}</p>
      </div>

      {latestReport.noteworthyComments && (
        <div class="report-section">
          <h3>Noteworthy Comments</h3>
          <p class="noteworthy">{latestReport.noteworthyComments}</p>
        </div>
      )}

      <div class="report-section">
        <h3>What I Did Today</h3>
        <ul class="activity-list">
          {latestReport.whatIDidToday.map((activity: string) => (
            <li>{activity}</li>
          ))}
        </ul>
      </div>

      {latestReport.trainingSkills.length > 0 && (
        <div class="report-section">
          <h3>Training Skills</h3>
          <ul class="activity-list">
            {latestReport.trainingSkills.map((skill: string) => (
              <li>{skill}</li>
            ))}
          </ul>
        </div>
      )}

      {latestReport.caughtBeingGood.length > 0 && (
        <div class="report-section">
          <h3>Caught Being Good</h3>
          <ul class="good-behavior-list">
            {latestReport.caughtBeingGood.map((behavior: string) => (
              <li>‚ú® {behavior}</li>
            ))}
          </ul>
        </div>
      )}

      {latestReport.ooops.length > 0 && (
        <div class="report-section">
          <h3>Ooops</h3>
          <ul class="ooops-list">
            {latestReport.ooops.map((ooop: string) => (
              <li>{ooop}</li>
            ))}
          </ul>
        </div>
      )}
    </div>

    <!-- Quick Links -->
    <div class="quick-links">
      <a href="/pepper-report/trends" class="link-card">
        <span class="link-icon">üìä</span>
        <span class="link-text">View Trends</span>
      </a>
      <a href="/pepper-report/timeline" class="link-card">
