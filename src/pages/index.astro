    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .link-card {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 2rem;
    background: white;
    border: 2px solid var(--cream-dark);
    text-decoration: none;
    color: var(--charcoal);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .link-card::after {
    content: '‚Üí';
    position: absolute;
    right: 2rem;
    font-size: 1.5rem;
    color: var(--gold);
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

  .link-card:hover::after {
    opacity: 1;
    transform: translateX(0);
  }

  .link-card:hover {
    transform: translateX(8px);
    border-color: var(--burgundy);
    background: linear-gradient(135deg, rgba(139, 38, 53, 0.03) 0%, rgba(47, 82, 51, 0.03) 100%);
  }

  .link-icon {
    font-size: 2.5rem;
    filter: grayscale(30%);
    transition: all 0.3s ease;
  }

  .link-card:hover .link-icon {
    filter: grayscale(0%);
    transform: scale(1.1);
  }

  .link-text {
    font-size: 1.2rem;
    font-weight: 600;
    font-family: 'Cormorant Garamond', serif;
    letter-spacing: 0.01em;
  }

  @media (max-width: 768px) {
    main {
      padding: 2rem 1rem;
    }

    .header {
      padding: 1rem 0;
      margin-bottom: 2.5rem;
    }

    .decorative-corner {
      display: none;
    }

    h1 {
      font-size: 2.5rem;
    }

    .subtitle-wrapper {
      flex-direction: column;
      gap: 0.75rem;
    }

    .divider-line {
      width: 60px;
    }

    .subtitle {
      font-size: 1rem;
      text-align: center;
    }

    .stats-grid {
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }

    .stat-card {
      padding: 1.5rem 1rem;
    }

    .stat-value {
      font-size: 2.5rem;
    }

    .stat-label {
      font-size: 0.75rem;
    }

    .latest-report,
    .latest-photo-section {
      padding: 2rem 1.5rem;
    }

    .latest-report::before,
    .latest-photo-section::before {
      left: 1rem;
      right: 1rem;
    }

    .report-header,
    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .section-header h2,
    .report-header h2 {
      font-size: 1.75rem;
    }

    .header-left {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

