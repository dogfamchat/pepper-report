---

import { readFileSync } from 'node:fs';
import { join } from 'node:path';
import photosData from '../../photos.json';
import { getDateRangeText, readAllReportCards } from '../../scripts/analysis/report-reader';
import { formatDate } from '../../scripts/utils/date-utils';
import Layout from '../layouts/Layout.astro';

// Read all report cards
const allReports = readAllReportCards();
const latestReport = allReports[allReports.length - 1]; // Already sorted

// Load photos data to find most recent photo
const sortedPhotos = [...photosData.photos].sort((a, b) => b.date.localeCompare(a.date));
const latestPhoto = sortedPhotos[0];

// Read grade trends summary
const gradeTrendsPath = join(process.cwd(), 'data', 'analysis', 'aggregates', 'grade-trends.json');
const gradeTrends = JSON.parse(readFileSync(gradeTrendsPath, 'utf-8'));

// Calculate grade percentage
const gradePercent = (gradeTrends.summary.overallAverageGrade / 4.0) * 100;
---

<Layout title="Pepper's Daycare Dashboard">
  <main>
    <div class="header">
      <div class="decorative-corner corner-tl"></div>
      <div class="decorative-corner corner-tr"></div>
      <div class="title-ornament">‚ú¶</div>
      <h1>Pepper's Daycare Chronicles</h1>
      <div class="subtitle-wrapper">
        <div class="divider-line"></div>
        <p class="subtitle">Tracking {latestReport.dog.name}'s daycare adventures {getDateRangeText(allReports)}</p>
        <div class="divider-line"></div>
      </div>
    </div>

    <!-- Overall Stats -->
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-value">{gradeTrends.summary.totalReports}</div>
        <div class="stat-label">Total Days</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">{gradeTrends.summary.overallAverageGrade.toFixed(2)}</div>
        <div class="stat-label">Average Grade</div>
        <div class="stat-detail">{gradePercent.toFixed(0)}% (A-B average)</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">{gradeTrends.summary.overallGradeDistribution.A}</div>
        <div class="stat-label">A Grades</div>
        <div class="stat-detail">{((gradeTrends.summary.overallGradeDistribution.A / gradeTrends.summary.totalReports) * 100).toFixed(0)}% of days</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">{gradeTrends.weekly.length}</div>
        <div class="stat-label">Weeks Tracked</div>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="quick-links">
      <a href="/trends" class="link-card">
        <span class="link-icon">üìä</span>
        <span class="link-text">View Trends</span>
      </a>
      <a href="/timeline" class="link-card">
        <span class="link-icon">üìÖ</span>
        <span class="link-text">Full Timeline</span>
      </a>
      <a href="/gallery" class="link-card">
        <span class="link-icon">üì∑</span>
        <span class="link-text">Photo Gallery</span>
      </a>
    </div>

    <!-- Latest Report Card -->
    <div class="latest-report">
      <div class="report-header">
        <div class="header-left">
          <h2>Latest Report Card</h2>
          <a href="/timeline" class="view-all-link">View all reports ‚Üí</a>
        </div>
        <span class="report-date">{formatDate(latestReport.date)}</span>
      </div>

      <div class=`grade-banner grade-${latestReport.grade.toLowerCase()}`>
        <div class="grade-letter">{latestReport.grade}</div>
        <div class="grade-description">{latestReport.gradeDescription}</div>
      </div>

      <div class="report-columns">
        <div class="report-section">
          <h3>Staff</h3>
          <p>{latestReport.staffNames.join(', ')}</p>
        </div>

        <div class="report-section">
          <h3>Best Part of Day</h3>
          <p class="highlight">{latestReport.bestPartOfDay}</p>
        </div>

        {latestReport.caughtBeingGood.length > 0 && (
          <div class="report-section">
            <h3>Caught Being Good</h3>
            <ul class="activity-list behavior">
              {latestReport.caughtBeingGood.map((behavior: string) => (
                <li>‚ú® {behavior}</li>
              ))}
            </ul>
          </div>
        )}

        {latestReport.ooops.length > 0 && (
          <div class="report-section">
            <h3>Ooops</h3>
            <ul class="ooops-list">
              {latestReport.ooops.map((ooop: string) => (
                <li>üòÖ {ooop}</li>
              ))}
            </ul>
          </div>
        )}

        <div class="report-section">
          <h3>What I Did Today</h3>
          <ul class="activity-list activities">
            {latestReport.whatIDidToday.map((activity: string) => (
              <li>üéæ {activity}</li>
            ))}
          </ul>
        </div>

        {latestReport.trainingSkills.length > 0 && (
          <div class="report-section">
            <h3>Training Skills</h3>
            <ul class="activity-list training">
              {latestReport.trainingSkills.map((skill: string) => (
                <li>üèãÔ∏è‚Äç‚ôÄÔ∏è {skill}</li>
              ))}
            </ul>
          </div>
        )}
      </div>

      {latestReport.noteworthyComments && (
        <div class="report-section">
          <h3>Noteworthy Comments</h3>
          <p class="noteworthy">{latestReport.noteworthyComments}</p>
        </div>
      )}
    </div>

    <!-- Latest Photo -->
    {latestPhoto && (
      <div class="latest-photo-section">
        <div class="section-header">
          <div class="header-left">
            <h2>üì∑ Latest Photo</h2>
            <a href="/gallery" class="view-all-link">View all photos ‚Üí</a>
          </div>
          <span class="photo-date">{formatDate(latestPhoto.date)}</span>
        </div>
        <a
          href={latestPhoto.r2Url}
          target="_blank"
          rel="noopener noreferrer"
          class="latest-photo-link"
        >
          <img
            src={latestPhoto.thumbnailUrl}
            alt={`Pepper's latest photo from ${latestPhoto.date}`}
            class="latest-photo-img"
            loading="lazy"
          />
          <div class="photo-overlay">
            <span class="view-full-size">Click to view full size</span>
          </div>
        </a>
      </div>
    )}
  </main>
</Layout>

<style>
  main {
    max-width: 1400px;
    margin: 0 auto;
    padding: 3rem 2rem;
    animation: fadeInUp 0.8s ease-out;
  }

  .header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    padding: 2rem 0;
  }

  .decorative-corner {
    position: absolute;
    width: 60px;
    height: 60px;
    border-style: solid;
    border-color: var(--gold);
  }

  .corner-tl {
    top: 0;
    left: 50%;
    transform: translateX(-300px);
    border-width: 2px 0 0 2px;
  }

  .corner-tr {
    top: 0;
    right: 50%;
    transform: translateX(300px);
    border-width: 2px 2px 0 0;
  }

  .title-ornament {
    font-size: 2rem;
    color: var(--gold);
    margin-bottom: 0.5rem;
    animation: shimmer 3s ease-in-out infinite;
    background: linear-gradient(90deg, var(--gold-dark), var(--gold), var(--gold-dark));
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  h1 {
    font-size: 4rem;
    margin: 0 0 1.5rem 0;
    color: var(--burgundy);
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  .subtitle-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 1rem;
  }

  .divider-line {
    width: 80px;
    height: 1px;
    background: linear-gradient(to right, transparent, var(--warm-gray), transparent);
  }

  .subtitle {
    font-size: 1.15rem;
    color: var(--warm-gray);
    margin: 0;
    font-weight: 400;
    letter-spacing: 0.02em;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .stat-card {
    background: white;
    padding: 2rem;
    border-radius: 0;
    position: relative;
    overflow: hidden;
    border: 2px solid var(--cream-dark);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    animation: fadeInUp 0.6s ease-out backwards;
  }

  .stat-card:nth-child(1) { animation-delay: 0.1s; }
  .stat-card:nth-child(2) { animation-delay: 0.2s; }
  .stat-card:nth-child(3) { animation-delay: 0.3s; }
  .stat-card:nth-child(4) { animation-delay: 0.4s; }

  .stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-elegant);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .stat-card:hover::before {
    transform: scaleX(1);
  }

  .stat-card:hover {
    transform: translateY(-8px);
    border-color: var(--gold);
    box-shadow: 0 20px 40px rgba(139, 38, 53, 0.15);
  }

  .stat-value {
    font-size: 3rem;
    font-weight: 700;
    font-family: 'Cormorant Garamond', serif;
    margin-bottom: 0.5rem;
    background: var(--gradient-elegant);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .stat-label {
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--warm-gray);
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .stat-detail {
    font-size: 0.9rem;
    color: var(--forest);
    font-weight: 400;
  }

  .latest-photo-section {
    background: white;
    border: 2px solid var(--cream-dark);
    padding: 3rem;
    margin-bottom: 3rem;
    position: relative;
  }

  .latest-photo-section::before {
    content: '';
    position: absolute;
    top: -10px;
    left: 2rem;
    right: 2rem;
    height: 4px;
    background: var(--gradient-forest);
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--cream-dark);
  }

  .section-header h2 {
    margin: 0;
    color: var(--forest);
    font-size: 2rem;
  }

  .photo-date {
    color: var(--warm-gray);
    font-size: 0.95rem;
    font-weight: 500;
    letter-spacing: 0.05em;
  }

  .latest-photo-link {
    display: block;
    position: relative;
    max-width: min(700px, 100%);
    margin: 0 auto;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    border: 3px solid var(--cream-dark);
  }

  .latest-photo-link:hover {
    transform: scale(1.02);
    border-color: var(--gold);
    box-shadow: 0 30px 60px rgba(139, 38, 53, 0.2);
  }

  .latest-photo-img {
    width: 100%;
    max-width: 100%;
    height: auto;
    display: block;
    object-fit: contain;
    transition: transform 0.5s ease;
  }

  .latest-photo-link:hover .latest-photo-img {
    transform: scale(1.05);
  }

  .photo-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(139, 38, 53, 0.9), transparent);
    padding: 3rem 2rem 2rem;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .latest-photo-link:hover .photo-overlay {
    opacity: 1;
  }

  .view-full-size {
    color: var(--cream);
    font-size: 1.1rem;
    font-weight: 600;
    text-align: center;
    display: block;
    font-family: 'Cormorant Garamond', serif;
  }

  .latest-report {
    background: white;
    border: 2px solid var(--cream-dark);
    padding: 3rem;
    margin-bottom: 3rem;
    position: relative;
  }

  .latest-report::before {
    content: '';
    position: absolute;
    top: -10px;
    left: 2rem;
    right: 2rem;
    height: 4px;
    background: var(--gradient-regal);
  }

  .report-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--cream-dark);
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .section-header .header-left {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .report-header h2 {
    margin: 0;
    color: var(--burgundy);
    font-size: 2rem;
  }

  .view-all-link {
    color: var(--forest);
    font-size: 0.95rem;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    position: relative;
  }

  .view-all-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--gold);
    transition: width 0.3s ease;
  }

  .view-all-link:hover::after {
    width: 100%;
  }

  .view-all-link:hover {
    color: var(--burgundy);
  }

  .report-date {
    color: var(--warm-gray);
    font-size: 0.95rem;
    font-weight: 500;
    letter-spacing: 0.05em;
  }

  .grade-banner {
    display: flex;
    align-items: center;
    gap: 2rem;
    padding: 2rem;
    margin-bottom: 3rem;
    position: relative;
    border: 2px solid;
    overflow: hidden;
  }

  .grade-banner::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0.08;
    z-index: 0;
  }

  .grade-a {
    border-color: var(--gold);
    background: white;
    color: var(--charcoal);
  }

  .grade-a::before {
    background: var(--gradient-regal);
  }

  .grade-b {
    border-color: var(--forest);
    background: white;
    color: var(--charcoal);
  }

  .grade-b::before {
    background: var(--gradient-forest);
  }

  .grade-letter {
    font-size: 5rem;
    font-weight: 700;
    line-height: 1;
    font-family: 'Cormorant Garamond', serif;
    background: var(--gradient-elegant);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
    z-index: 1;
  }

  .grade-description {
    font-size: 1.3rem;
    flex: 1;
    position: relative;
    z-index: 1;
    color: var(--charcoal);
    font-weight: 500;
  }

  .report-columns {
    column-count: 2;
    column-gap: 3rem;
    margin-bottom: 2rem;
  }

  .report-section {
    margin-bottom: 2rem;
    break-inside: avoid;
  }

  .report-section h3 {
    color: var(--forest);
    font-size: 1.3rem;
    margin: 0 0 1rem 0;
    font-weight: 600;
    position: relative;
    padding-left: 1rem;
  }

  .report-section h3::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 60%;
    background: var(--gold);
  }

  .report-section p {
    margin: 0;
    color: var(--charcoal);
    line-height: 1.8;
    font-size: 1rem;
  }

  .highlight {
    font-size: 1.15rem;
    font-weight: 600;
    color: var(--burgundy);
  }

  .noteworthy {
    background: rgba(139, 38, 53, 0.04);
    padding: 1.5rem;
    border-left: 4px solid var(--burgundy);
    font-style: italic;
    font-size: 1.05rem;
    line-height: 1.7;
    color: var(--charcoal);
  }

  .activity-list, .ooops-list {
    list-style: none;
    margin: 0;
    padding-left: 0;
    color: var(--charcoal);
  }

