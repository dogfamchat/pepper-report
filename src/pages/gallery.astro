---

import { existsSync, readFileSync } from 'node:fs';
import { join } from 'node:path';
import photosData from '../../photos.json';
import { formatMonth, formatShortDate } from '../../scripts/utils/date-utils';
import Layout from '../layouts/Layout.astro';

// Load photo analysis data
interface PhotoAnalysis {
  filename: string;
  date: string;
  r2Url: string;
  qualityScore: number;
  cutenessScore: number;
  compositionScore: number;
  overallScore: number;
  description: string;
  tags: string[];
  activity: string;
  visibleFriends: string[];
  pepperVisible: boolean;
  analyzedAt: string;
}

interface PhotoAnalysisData {
  photos: PhotoAnalysis[];
  bestPhotos: string[];
  averageScore: number;
  totalPhotos: number;
}

let analysisData: PhotoAnalysisData | null = null;
const analysisPath = join(process.cwd(), 'data', 'analysis', 'photo-analysis.json');
if (existsSync(analysisPath)) {
  analysisData = JSON.parse(readFileSync(analysisPath, 'utf-8'));
}

// Create a map for quick analysis lookup
const analysisMap = new Map<string, PhotoAnalysis>();
if (analysisData) {
  for (const photo of analysisData.photos) {
    analysisMap.set(photo.filename, photo);
  }
}

// Sort photos by date (newest first)
const photos = [...photosData.photos].sort((a, b) => b.date.localeCompare(a.date));

// Get best photos (top 10 by score)
type BestPhoto = (typeof photosData.photos)[number] & { analysis: PhotoAnalysis };
const bestPhotos: BestPhoto[] =
  analysisData?.bestPhotos
    .map((filename) => {
      const photoMeta = photosData.photos.find((p) => p.filename === filename);
      const analysis = analysisMap.get(filename);
      return photoMeta && analysis ? { ...photoMeta, analysis } : null;
    })
    .filter((p): p is BestPhoto => p !== null) || [];

// Group photos by month for section headers
interface PhotosByMonth {
  [key: string]: typeof photos;
}

const photosByMonth = photos.reduce((acc, photo) => {
  const month = photo.date.substring(0, 7); // YYYY-MM
  if (!acc[month]) {
    acc[month] = [];
  }
  acc[month].push(photo);
  return acc;
}, {} as PhotosByMonth);

const months = Object.keys(photosByMonth);

// Prepare photo data with analysis for client-side
const photosWithAnalysis = photos.map((p) => ({
  ...p,
  analysis: analysisMap.get(p.filename) || null,
}));
---

<Layout title="Photo Gallery - Pepper's Daycare">
  <main>
    <div class="header">
      <a href="/" class="back-link">&larr; Back to Dashboard</a>
      <h1>Photo Gallery</h1>
      <p class="subtitle">
        {photos.length} photos from daycare
        {analysisData && <span class="avg-score">â€¢ Average score: {analysisData.averageScore}/10</span>}
      </p>
    </div>

    {/* Best Photos Section */}
    {bestPhotos.length > 0 && (
      <section class="best-photos-section">
        <h2 class="section-title">Top Rated Photos</h2>
        <div class="best-photos-grid">
          {bestPhotos.map((photo, index) => (
            <div class="best-photo-card" data-rank={index + 1}>
              <div class="rank-badge">{index === 0 ? '' : `#${index + 1}`}</div>
              <button
                type="button"
                class="photo-link"
                data-photo-url={photo.r2Url}
                data-photo-index={photos.findIndex(p => p.date === photo.date)}
                aria-label={`View photo from ${photo.date}`}
              >
                <img
                  src={photo.thumbnailUrl}
                  alt={photo.analysis?.description || `Pepper's photo from ${photo.date}`}
                  class="photo-img"
                  loading="lazy"
                />
                <div class="photo-overlay">
                  <div class="score-badge">{photo.analysis?.overallScore}/10</div>
                  <span class="photo-date">{formatShortDate(photo.date)}</span>
                </div>
              </button>
              {photo.analysis && (
                <div class="photo-description">
                  <p>{photo.analysis.description}</p>
                </div>
              )}
            </div>
          ))}
        </div>
      </section>
    )}

    {/* All Photos by Month */}
    <section class="all-photos-section">
      <h2 class="section-title">All Photos</h2>
      {months.map(month => (
        <div class="month-section">
          <h3 class="month-header">{formatMonth(month)}</h3>
          <div class="photo-grid">
            {photosByMonth[month].map((photo) => {
              const analysis = analysisMap.get(photo.filename);
              return (
                <div class="photo-card">
                  <button
                    type="button"
                    class="photo-link"
                    data-photo-url={photo.r2Url}
                    data-photo-index={photos.findIndex(p => p.date === photo.date)}
                    aria-label={`View photo from ${photo.date}`}
                  >
                    <img
                      src={photo.thumbnailUrl}
                      alt={analysis?.description || `Pepper's photo from ${photo.date}`}
                      class="photo-img"
                      loading="lazy"
                    />
                    <div class="photo-overlay">
                      {analysis && <div class="score-badge">{analysis.overallScore}/10</div>}
                      <span class="photo-date">{formatShortDate(photo.date)}</span>
                      {analysis && <span class="activity-tag">{analysis.activity}</span>}
                    </div>
                  </button>
                  {analysis && (
                    <div class="card-info">
                      <p class="description">{analysis.description}</p>
                      <div class="tags">
                        {analysis.tags.slice(0, 4).map(tag => (
                          <span class="tag">{tag}</span>
                        ))}
                      </div>
                    </div>
                  )}
                </div>
              );
            })}
          </div>
        </div>
      ))}
    </section>

    <!-- Lightbox Modal -->
    <div id="lightbox" class="lightbox" aria-hidden="true">
      <button type="button" class="lightbox-close" aria-label="Close lightbox">&times;</button>
      <button type="button" class="lightbox-prev" aria-label="Previous photo">&#8249;</button>
      <button type="button" class="lightbox-next" aria-label="Next photo">&#8250;</button>
      <div class="lightbox-content">
        <img id="lightbox-img" src="" alt="" />
        <div class="lightbox-info">
          <div class="lightbox-caption" id="lightbox-caption"></div>
          <div class="lightbox-scores" id="lightbox-scores"></div>
          <div class="lightbox-description" id="lightbox-description"></div>
          <div class="lightbox-tags" id="lightbox-tags"></div>
        </div>
      </div>
    </div>
  </main>
</Layout>

