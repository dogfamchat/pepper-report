<script>
  import { Chart, registerables } from 'chart.js';

  // Register Chart.js components
  Chart.register(...registerables);

  // Activity category to items mapping
  const activityCategoryItems = {
    'Playtime': ['played with as many buddies as possible', 'played outdoors', 'party animal', 'played with my favorite toy', 'had a pool party', 'played on the agility equipment', 'caught bubbles'],
    'Socialization': ['played with as many buddies as possible', 'party animal', 'hung out with my bestie', 'had a pool party'],
    'Outdoor': ['played outdoors', 'had a pool party'],
    'Rest': ['napped with friends'],
    'Training': ['one-on-one time with the trainer', 'played on the agility equipment', 'nose work games and challenges'],
    'Enrichment': ['caught bubbles', 'engagement games', 'brain building games and challenges', 'nose work games and challenges'],
    'Special Event': ['special event']
  };

  // Training category to skills mapping
  const trainingCategoryItems = {
    'Obedience Commands': ['sit (stay)', 'down (stay)', 'stand (stay)', 'recall', 'name recognition'],
    'Impulse Control & Focus': ['impulse control', 'focus work', 'jazz up, settle down'],
    'Physical Skills': ['agility', 'balancing skills'],
    'Handling & Manners': ['collar grab games', 'handling (exam style)', 'loose-leash walking', 'boundries, door-ways, and thresholds', 'place work (go to matt/table)', 'crate training', 'confidence building'],
    'Advanced Training': ['sequence (3 different skills in varying order)', 'recall with distractions', 'hands-free work'],
    'Fun Skills': ['trick training']
  };

  // Initialize activity category chart
  const activityCategoriesCanvas = document.getElementById('activityCategoriesChart') as HTMLCanvasElement | null;
  if (activityCategoriesCanvas) {
    const configStr = activityCategoriesCanvas.dataset.chartConfig;
    if (configStr) {
      const config = JSON.parse(configStr);
      config.options.plugins.tooltip.callbacks.afterLabel = function(context: any) {
        const label = context.label as string;
        const items = activityCategoryItems[label as keyof typeof activityCategoryItems] || [];
        return items.map((item: string) => '‚Ä¢ ' + item);
      };
      new Chart(activityCategoriesCanvas, config);
    }
  }

  // Initialize training category chart
  const trainingCategoriesCanvas = document.getElementById('trainingCategoriesChart') as HTMLCanvasElement | null;
  if (trainingCategoriesCanvas) {
    const configStr = trainingCategoriesCanvas.dataset.chartConfig;
    if (configStr) {
      const config = JSON.parse(configStr);
      config.options.plugins.tooltip.callbacks.afterLabel = function(context: any) {
        const label = context.label as string;
        const items = trainingCategoryItems[label as keyof typeof trainingCategoryItems] || [];
        return items.map((item: string) => '‚Ä¢ ' + item);
      };
      new Chart(trainingCategoriesCanvas, config);
    }
  }

  // Initialize activity frequency chart
  const activityFrequencyCanvas = document.getElementById('activityFrequencyChart') as HTMLCanvasElement | null;
  if (activityFrequencyCanvas) {
    const configStr = activityFrequencyCanvas.dataset.chartConfig;
    if (configStr) {
      const config = JSON.parse(configStr);
      new Chart(activityFrequencyCanvas, config);
    }
  }

  // Initialize training frequency chart
  const trainingFrequencyCanvas = document.getElementById('trainingFrequencyChart') as HTMLCanvasElement | null;
  if (trainingFrequencyCanvas) {
    const configStr = trainingFrequencyCanvas.dataset.chartConfig;
    if (configStr) {
      const config = JSON.parse(configStr);
      new Chart(trainingFrequencyCanvas, config);
  }

  // Initialize behavior timeline chart
  const behaviorTimelineCanvas = document.getElementById('behaviorTimelineChart');
  if (behaviorTimelineCanvas) {
    const config = JSON.parse(behaviorTimelineCanvas.dataset.chartConfig);
    new Chart(behaviorTimelineCanvas, config);
  }

  // Initialize behavior comparison chart
  const behaviorComparisonCanvas = document.getElementById('behaviorComparisonChart');
  if (behaviorComparisonCanvas) {
    const config = JSON.parse(behaviorComparisonCanvas.dataset.chartConfig);
    new Chart(behaviorComparisonCanvas, config);
  }

  // Initialize behavior frequency chart
  const behaviorFrequencyCanvas = document.getElementById('behaviorFrequencyChart');
  if (behaviorFrequencyCanvas) {
    const config = JSON.parse(behaviorFrequencyCanvas.dataset.chartConfig);
    new Chart(behaviorFrequencyCanvas, config);
    }
  }

  // Modal functionality
  const infoButtons = document.querySelectorAll('.info-icon');
  const modals = document.querySelectorAll('.modal');
  const closeButtons = document.querySelectorAll('.modal-close');

  // Open modal
  infoButtons.forEach(button => {
    button.addEventListener('click', () => {
      const modalId = (button as HTMLElement).dataset.modal;
      if (modalId) {
        const modal = document.getElementById(modalId);
        if (modal) {
          modal.classList.add('active');
          document.body.style.overflow = 'hidden'; // Prevent scrolling
        }
      }
    });
  });

  // Close modal
  closeButtons.forEach(button => {
    button.addEventListener('click', () => {
      const modal = button.closest('.modal');
      if (modal) {
        modal.classList.remove('active');
        document.body.style.overflow = ''; // Restore scrolling
      }
    });
  });

  // Close modal when clicking outside
  modals.forEach(modal => {
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        modal.classList.remove('active');
        document.body.style.overflow = ''; // Restore scrolling
      }
    });
  });

  // Close modal on ESC key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      modals.forEach(modal => {
        modal.classList.remove('active');
        document.body.style.overflow = ''; // Restore scrolling
      });
    }
  });
</script>
