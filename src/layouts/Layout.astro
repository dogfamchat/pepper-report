interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Pepper's Daycare Dashboard" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;600;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body>
    <div class="noise-overlay"></div>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* Regal Color Palette */
    --burgundy: #8B2635;
    --burgundy-dark: #6B1928;
    --burgundy-light: #A84557;
    --forest: #2F5233;
    --forest-dark: #1F3622;
    --forest-light: #4A7551;
    --cream: #FBF8F3;
    --cream-dark: #F5F0E8;
    --gold: #D4AF37;
    --gold-dark: #B8962F;
    --charcoal: #2C2C2C;
    --warm-gray: #8B8680;

    /* Gradients */
    --gradient-regal: linear-gradient(135deg, var(--burgundy) 0%, var(--burgundy-dark) 100%);
    --gradient-forest: linear-gradient(135deg, var(--forest) 0%, var(--forest-dark) 100%);
    --gradient-gold: linear-gradient(135deg, #E8C96F 0%, var(--gold) 100%);
    --gradient-elegant: linear-gradient(120deg, var(--burgundy) 0%, var(--forest-dark) 100%);
  }

  * {
    box-sizing: border-box;
  }

  html {
    font-family: 'Outfit', -apple-system, BlinkMacSystemFont, sans-serif;
    background: var(--cream);
    color: var(--charcoal);
  }

  body {
    margin: 0;
    padding: 0;
    position: relative;
    overflow-x: hidden;
  }

  /* Subtle noise texture for depth */
  .noise-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)' opacity='0.03'/%3E%3C/svg%3E");
    pointer-events: none;
    z-index: 9999;
    opacity: 0.4;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-weight: 600;
    letter-spacing: 0.01em;
  }

  /* Elegant animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes shimmer {
    0% {
      background-position: -200% center;
    }
    100% {
      background-position: 200% center;
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  /* Decorative paw print watermark */
  body::before {
    content: 'üêæ';
    position: fixed;
    bottom: -50px;
    right: -50px;
    font-size: 400px;
    opacity: 0.02;
    transform: rotate(-25deg);
    pointer-events: none;
    z-index: 0;
  }

  @media (max-width: 768px) {
    body::before {
      font-size: 250px;
      bottom: -30px;
      right: -30px;
    }
  }
</style>
